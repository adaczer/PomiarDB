@using ModalTut.Models
@model ModalTut.Models.Pomiar
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Wprowadzanie danych pomiarowych</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/Prototype/favicon.ico" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/style.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
    <link href="~/Content/addons/datatables.min.css" rel="stylesheet">
</head>
<body>
    <div class="container" style="margin-top:2%">

        <!-- Table with panel -->
        <div class="card overflow-auto">


            <!--Card image-->
            <div class="view  gradient-card-header card-img-overlay blue-gradient py-3 mb-3 d-flex justify-content-between align-items-center">

    

                <a href="" class="white-text mx-3">Informacje o pomiarze - </a>

                <div>
                  @Html.ActionLink("POWRÓT", "Index", "Home", htmlAttributes: new { @class = "btn btn-outline-white btn-sm px-2 m-2" })
                </div>

            </div>
            <!--/Card image-->

            <div class="view  gradient-card-header card-img-overlay py-3 mb-3 d-flex justify-content-between align-items-center">

                <div class="card" style="width:100%">
                    <div class="card-body">
                        <h5 class="card-title mb-4"> Wprowadź informacje o kliencie:</h5>

                        <!--Add Client Form-->
                        <form id="addOrEditForm" action="~/Home/AddorEdit" method="post">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Imię i Nazwisko" })
                                        @Html.ValidationMessageFor(m => m.Name)

                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Ulica, htmlAttributes: new { @class = "form-control", @placeholder = "Ulica" })

                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Miejscowosc, htmlAttributes: new { @class = "form-control", @placeholder = "Miejscowość" })
                                        @Html.ValidationMessageFor(m => m.Miejscowosc)

                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.KodPocztowy, htmlAttributes: new { @class = "form-control", @placeholder = "Kod pocztowy" })

                                    </div>
                                </div>

                            </div>


                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.NrTel, htmlAttributes: new { @class = "form-control", @placeholder = "Nr Telefonu" })

                                    </div>

                                    <div class="form-group">
                                        @*@Html.EditorFor(m => m.Data, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "datepicker form-control", placeholder = "Podaj datę pomiaru" } })*@

                                        @Html.EditorFor((m => m.Data), new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "-- Data pomiaru --"} })

                                        @Html.ValidationMessageFor(m => m.Data)
                                    </div>
                                </div>

                                <div class="col-md-3">

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Email" })
                                        @Html.ValidationMessageFor(m =>m.Email)
                                    </div>

                                    <div class="form-group">
                                        @Html.DropDownListFor(m => m.Status, new SelectList(Enum.GetValues(typeof(Status))), htmlAttributes: new { @class = "form-control", @placeholder = "Status" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.Notes, htmlAttributes: new { @class = "form-control", @placeholder = "Notatki", @style = "min-height: 92px;" })

                                    </div>
                                </div>
                            </div>


                            <button type="submit" class="btn blue-gradient">Zapisz</button>
                            @Html.ActionLink("Anuluj", "Index", "Home", htmlAttributes: new { @class = "btn btn-light " })
                            @*@Html.ActionLink("WYŚLIJ MAILEM", "SendEmail", "Pomiar", new { id = Model.PomiarId }, htmlAttributes: new { @class = "btn btn-outline-info btn-sm px-2 m-2" })*@

                        </form>

                        <!--/Add Client Form-->

                    </div>
                </div>
            </div>
      </div>
    </div>


    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd-MM-yy",
                changeMonth: true,
                changeYear: true
            });
        });
    </script>

</body>
</html>
